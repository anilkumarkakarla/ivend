<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardBackgroundColor="@color/citixsys_background_color"
    card_view:cardCornerRadius="0dp"
    card_view:cardPreventCornerOverlap="false"
    card_view:cardUseCompatPadding="true"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.percent.PercentFrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                card_view:layout_widthPercent="50%"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/MyDayTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:text="@string/MyDayItem"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/citixsys_main_text_color"
                    android:textSize="14dp" />
            </LinearLayout>
            <LinearLayout
                card_view:layout_widthPercent="75%"
                card_view:layout_marginLeftPercent="25%"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/TodaysSaleLabel"
                        android:fontFamily="sans-serif"
                        android:textColor="@color/citixsys_main_text_color"
                        android:textSize="12dp"
                        android:gravity="right" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="126"
                        android:fontFamily="sans-serif"
                        android:textColor="@color/citixsys_main_text_color"
                        android:textSize="14dp"
                        android:gravity="right" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/ComissionLabel"
                        android:fontFamily="sans-serif"
                        android:textColor="@color/citixsys_main_text_color"
                        android:textSize="12dp"
                        android:gravity="right" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="126"
                        android:fontFamily="sans-serif"
                        android:textColor="@color/citixsys_main_text_color"
                        android:textSize="14dp"
                        android:gravity="right" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/SalesTargetLabel"
                        android:fontFamily="sans-serif"
                        android:textColor="@color/citixsys_main_text_color"
                        android:textSize="12dp"
                        android:gravity="right" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="126"
                        android:fontFamily="sans-serif"
                        android:textColor="@color/citixsys_main_text_color"
                        android:textSize="14dp"
                        android:gravity="right" />
                </LinearLayout>
            </LinearLayout>
        </android.support.percent.PercentFrameLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>