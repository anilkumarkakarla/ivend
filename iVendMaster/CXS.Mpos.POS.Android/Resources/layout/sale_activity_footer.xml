<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sale_footer"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/citixsys_background_color"
    android:layout_alignParentBottom="true">
    <LinearLayout
        android:layout_height="40dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="6">
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/sale_transaction_button">
            <ImageView
                android:id="@+id/trashButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:src="@android:drawable/ic_menu_gallery" />
        </LinearLayout>
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/sale_transaction_button">
            <ImageView
                android:id="@+id/pauseButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:src="@android:drawable/ic_menu_gallery" />
        </LinearLayout>
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_weight="4"
            android:background="@drawable/sale_transaction_button">
            <ImageView
                android:id="@+id/scanButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:src="@android:drawable/ic_menu_gallery" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_height="60dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="4">
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/sale_transaction_button">
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/citixsys_main_text_color"
                    android:textSize="12dp"
                    android:text="@string/DiscountTitle" />
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/citixsys_main_text_color"
                    android:textSize="16dp"
                    android:text="$0.00" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/sale_transaction_button">
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/citixsys_main_text_color"
                    android:textSize="12dp"
                    android:text="@string/TaxTitle" />
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/citixsys_main_text_color"
                    android:textSize="16dp"
                    android:text="$0.00" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:background="@drawable/sale_transaction_button">
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/citixsys_main_text_color"
                    android:textSize="12dp"
                    android:text="@string/TotalTitle" />
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/citixsys_main_text_color"
                    android:textSize="16dp"
                    android:text="$0.00" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>