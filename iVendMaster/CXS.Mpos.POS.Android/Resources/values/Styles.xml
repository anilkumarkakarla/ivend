<?xml version="1.0" encoding="UTF-8"?>
<resources>
	<style name="CitiXsysMainTheme" parent="Theme.AppCompat.NoActionBar">
		<item name="colorPrimary">@color/citixsys_main_color</item>
		<item name="drawerArrowStyle">@style/CitiXsysDrawerArrowStyle</item>
		<item name="windowActionBar">false</item>
		<item name="windowActionModeOverlay">true</item>
		<item name="colorControlNormal">#FFFFFF</item>
	</style>
	<style name="CitiXsysLoginTheme" parent="Theme.AppCompat.NoActionBar">
		<item name="colorPrimary">#FFFFFF</item>
		<item name="drawerArrowStyle">@style/CitiXsysLoginDrawerArrowStyle</item>
		<item name="windowActionBar">false</item>
		<item name="windowActionModeOverlay">true</item>
	</style>
	<style name="CitiXsysDrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
		<item name="color">#F5F5F5</item>
		<item name="spinBars">true</item>
	</style>
	<style name="CitiXsysLoginDrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
		<item name="color">#000000</item>
		<item name="spinBars">true</item>
	</style>
	<style name="LoginInputField">
		<item name="android:background">@drawable/rounded_input_field</item>
		<item name="android:fontFamily">sans-serif</item>
		<item name="android:layout_height">40dp</item>
		<item name="android:layout_marginBottom">10dp</item>
		<item name="android:layout_marginTop">10dp</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:paddingLeft">10dp</item>
		<item name="android:textColor">@android:color/black</item>
		<item name="android:textColorHint">@android:color/darker_gray</item>
	</style>
	<style name="SaleSearchTextField">
		<item name="android:background">@drawable/sale_search_input_field</item>
		<item name="android:fontFamily">sans-serif</item>
		<item name="android:layout_height">30dp</item>
		<item name="android:layout_marginBottom">10dp</item>
		<item name="android:layout_marginTop">10dp</item>
		<item name="android:layout_marginLeft">10dp</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:paddingLeft">10dp</item>
		<item name="android:textColor">@android:color/black</item>
		<item name="android:textColorHint">@android:color/darker_gray</item>
	</style>
</resources>